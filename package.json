{
  "name": "epejso",
  "version": "1.4.0",
  "description": "epejso makes runbook from markdown",
  "keywords": [
    "epejso",
    "runbook"
  ],
  "homepage": "https://github.com/mittya6/epejso",
  "author": {
    "name": "Michio Yasuda",
    "email": "mittya6@gmail.com",
    "url": "https://github.com/mittya6/"
  },
  "license": "MIT",
  "main": "./cli",
  "bin": {
    "epejso": "./cli.js"
  },
  "files": [
    "cli.js",
    "config/",
    "dist/",
    "renderer/",
    "sample/",
    "template/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mittya6/epejso.git"
  },
  "scripts": {
    "compile-less": "npx lessc custom/my.uikit.less src/my.uikit.css --math=always --relative-urls",
    "wait": "onchange \"../**/*.md\" -e ./**/*.md  -- yarn build-all",
    "build-all": "node cli.js",
    "sample": "node cli.js -f sample/index.md -o ../"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "commander": "^7.2.0",
    "config": "^3.3.6",
    "cpx": "^1.5.0",
    "ejs": "^3.1.6",
    "fs": "^0.0.1-security",
    "glob": "^7.1.6",
    "marked": "^2.0.1",
    "meta-marked": "^0.5.0",
    "onchange": "^7.1.0",
    "prism-themes": "^1.6.0",
    "uikit": "^3.6.18"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "devDependencies": {
    "css-loader": "^5.2.6",
    "less": "^4.1.1",
    "prismjs": "^1.23.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  }
}
